#include "pretty.h"

string removeLeadingSpaces(string line){

  string result = "";

  //check if character is not space
  for(int i=0; i < line.length(); ++i){
    if(!isspace(line[i])){
      result += line.substr(i);
      break;
    }
   
  }
  // accumulate characters on a new line
  result += "\n";
     
  return result;
}



int countChar(string line, char c){

  int count = 0;

  for(int i = 0; i < line.length(); ++i){
    if(line[i]== c){
      count++;
    }
  }

  return 0;

}
